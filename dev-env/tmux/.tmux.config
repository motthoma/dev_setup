# --- Grundkonfiguration ---

# Kein Delay nach Prefix (schnelleres Verhalten)
set -s escape-time 0

# Maus aktivieren
set -g mouse on

# Vi-ähnliche Keybindings in Copy-Mode
setw -g mode-keys vi

# Statusleiste minimal
set -g status-bg colour236
set -g status-fg white
set -g status-left '#[fg=green]#H'
set -g status-right '#[fg=cyan]%Y-%m-%d %H:%M'

# --- Vim-ähnliche Pane-Navigation mit Ctrl+w h/j/k/l ---

# Zuerst sicherstellen, dass Ctrl+w nicht schon gebunden ist
unbind C-w

# Prefix entfällt – direkt Ctrl+w verwenden
bind-key -n C-w send-prefix

# Danach erlauben: Ctrl+w h/j/k/l (wie in Vim)
bind -n C-w h select-pane -L
bind -n C-w j select-pane -D
bind -n C-w k select-pane -U
bind -n C-w l select-pane -R

# Optional: Anzeige beim Wechsel
set -g display-panes-time 1000

# --- Optionale Vim-ähnliche Split-Tasten ---
# Split horizontal (unten)
bind | split-window -h
# Split vertikal (rechts)
bind - split-window -v
unbind '"'
unbind %

# --- Reload der Config ---
bind r source-file ~/.tmux.conf \; display "Reloaded tmux.conf ✅"

